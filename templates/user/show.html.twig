{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>First name</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>Last name</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ user.phone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Administrator</th>
                <td>{{ user.administrator ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ user.active ? 'Yes' : 'No' }}</td>
            </tr>


        </tbody>
    </table>

    <h3>Organising these events:</h3>
    <table>
        <thead>
            <tr>
                <th>Start date</th>
                <th>Name</th>
                <th>City</th>
                <th>Venue</th>
            </tr>
        </thead>
        <tbody>
        {% for e in user.eventsAsOrganiser %}

            <tr>

            <td>{{ e.startDateTime|date("Y-m-d") }}</td>
            <td>{{ e.name }}</td>
            <td>{{ e.venue.city.name }}</td>
            <td>{{ e.venue.name }}</td>
             <td>
                 <a href="{{ path('app_event_show', {'id': e.id}) }}">show</a>
             </td>
            </tr>

        {% endfor %}
        </tbody>
    </table>

    <h3>Participating in these events:</h3>
    <table>
        <thead>
        <tr>
            <th>Start date</th>
            <th>Name</th>
            <th>City</th>
            <th>Venue</th>
        </tr>

        </thead>
        <tbody>
        {% for e in user.eventsAsParticipant %}
            <tr>
                <td>{{ e.startDateTime|date("Y-m-d") }}</td>
                <td>{{ e.name }}</td>
                <td>{{ e.venue.city.name }}</td>
                <td>{{ e.venue.name }}</td>
                <td>
                    <a href="{{ path('app_event_show', {'id': e.id}) }}">show</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_index') }}">back to list</a>

    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
