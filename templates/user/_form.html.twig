{{ form_start(form) }}
    <div>
    {{ form_label(form.username) }}
    {{ form_widget(form.username)}}
</div>
<div>
    {{ form_label(form.password) }}
    {{ form_widget(form.password)}}
</div>
<div>
    {{ form_label(form.firstName) }}
    {{ form_widget(form.firstName)}}
</div>
<div>
    {{ form_label(form.lastName) }}
    {{ form_widget(form.lastName)}}
</div>
<div>
    {{ form_label(form.phone) }}
    {{ form_widget(form.phone)}}
</div>
<div>
    {{ form_label(form.email) }}
    {{ form_widget(form.email)}}
</div>
<div>
    {{ form_label(form.administrator) }}
    {{ form_widget(form.administrator)}}
</div>
<div>
    {{ form_label(form.active) }}
    {{ form_widget(form.active)}}
</div>
<div>
    {{ form_label(form.site) }}
    {{ form_widget(form.site)}}
</div>

<div>
    {{ form_row(form.image)}}
    {% if form.vars.value.filename!=null %}
        <img src="{{ asset(app_images_user_directory ~'/' ~form.vars.value.filename) }}"
             class="" alt="image"/>
        {{ form_row(form.deleteImage) }}
    {% endif %}
</div>
    <button class="btn">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
