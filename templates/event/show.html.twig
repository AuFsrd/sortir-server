{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <h1>Event</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ event.id }}</td>
        </tr>
        <tr>
            <th>Organising site</th>
            <td>{{ event.organiser.site.name }}</td>
        </tr>
        <tr>
            <th>Organised by</th>
            <td>{{ event.organiser.id ~ '//'~ event.organiser.fullname }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ event.name }}</td>
        </tr>
        <tr>
            <th>StartDateTime</th>
            <td>{{ event.startDateTime ? event.startDateTime|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Duration</th>
            <td>{{ event.duration }}</td>
        </tr>
        <tr>
            <th>RegistrationDeadline</th>
            <td>{{ event.registrationDeadline ? event.registrationDeadline|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>MaxParticipants</th>
            <td>{{ event.maxParticipants }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ event.description }}</td>
        </tr>
        <tr>
            <th>Venue</th>
            <td>{{ event.venue.name }}</td>
        </tr>
        <tr>
            <th>Street</th>
            <td>{{ event.venue.street }}</td>
        </tr>
        <tr>
            <th>Postcode</th>
            <td>{{ event.venue.city.postcode }}</td>
        </tr>
        <tr>
            <th>City</th>
            <td>{{ event.venue.city.name }}</td>
        </tr>
        <tr>
            <th>Latitude</th>
            <td>{{ event.venue.latitude }}</td>
        </tr>
        <tr>
            <th>Longitude</th>
            <td>{{ event.venue.longitude }}</td>
        </tr>


        </tbody>
    </table>

    <h3>Participants:</h3>
    <table>
        <thead>
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Name</th>
        </tr>

        </thead>
        <tbody>
        {% for p in event.participants %}
            <tr>
                <td>{{ p.id }}</td>
                <td>{{ p.username }}</td>
                <td>{{ p.fullname }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': p.id}) }}">show</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>


    </table>

    <a href="{{ path('app_event_index') }}">Event list</a>

    <a href="{{ path('app_event_edit', {'id': event.id}) }}">Edit</a>

    {{ include('event/_delete_form.html.twig') }}
{% endblock %}
