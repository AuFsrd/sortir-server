<form method="post" action="{{ path('app_event_cancel', {'id': event.id}) }}" onsubmit="return confirm('Are you sure you want to cancel this event?');">
    <input type="hidden" name="_token" value="{{ csrf_token('cancel' ~ event.id) }}">
    <button class="{{ 'button'=='false' ? 'btn btn-link' : 'btn btn-warning' }}">Cancel</button>
</form>
